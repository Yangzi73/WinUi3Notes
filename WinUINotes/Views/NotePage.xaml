<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="WinUINotes.Views.NotePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:WinUINotes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Padding="16" RowSpacing="8">

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBox
            x:Name="NoteEditor"
            Grid.Column="1"
            Width="400"
            Height="Auto"
            AcceptsReturn="True"
            Header="{x:Bind noteModel.Date.ToString()}"
            PlaceholderText="Enter your note"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            Text="{x:Bind noteModel.Text, Mode=TwoWay}"
            TextWrapping="Wrap" />

        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            HorizontalAlignment="Right"
            Orientation="Horizontal"
            Spacing="4">

            <!--  Save  -->
            <Button
                Click="SaveButton_Click"
                Content="Save"
                Style="{StaticResource AccentButtonStyle}" />

            <!--  Delete  -->
            <Button Click="DeleteButton_Click" Content="Delete" />
        </StackPanel>

        <!--
            返回按钮
            AppBarButton
            Grid.Column="2"
            HorizontalAlignment="Right"
            Click="ReturnToAllnotesPage_Click"
            Icon="Back"
            Label="Back"
        -->

    </Grid>


</Page>
