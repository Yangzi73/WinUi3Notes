<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="WinUINotes.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WinUINotes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:WinUINotes.Views"
    Title="WinUINotes"
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <MicaBackdrop Kind="Base" />
    </Window.SystemBackdrop>

    <Grid MinWidth="300" MinHeight="200">
        <Grid.RowDefinitions>
            <!--  Title Bar  -->
            <RowDefinition Height="Auto" />
            <!--  App Content  -->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TitleBar
            x:Name="AppTitleBar"
            Title="WinUi Notes"
            BackRequested="AppTitleBar_BackRequested"
            IsBackButtonEnabled="{x:Bind rootFrame.CanGoBack, Mode=OneWay}"
            IsBackButtonVisible="True">
            <TitleBar.IconSource>
                <FontIconSource Glyph="&#xF4AA;" />
            </TitleBar.IconSource>
        </TitleBar>

        <!--  App Content  -->
        <Frame
            x:Name="rootFrame"
            Grid.Row="1"
            SourcePageType="views:AllNotesPage" />
    </Grid>

</Window>
